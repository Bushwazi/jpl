.main-header {
	width: 100%;
	height: 30px;
	background: _tertiaryColor;
	box-shadow:0 0 2px 2px #333;
	.no-csspositionsticky & {
		position: fixed;
		top:0;
		left:0;
	}
	.csspositionsticky & {
		position: -webkit-sticky;
		position: -moz-sticky;
		position: -o-sticky;
		position: -ms-sticky;
		position: sticky;
		top:0;
		left:0;
	}
	a {
		display: block;
		height: 100%;
		line-height: 30px;
		font-weight: bold;  
	}
	.main-logo {
		float: left;
		width: 25%;
	}
	nav {
		float: right;
		width: 65%;
		.menu {
			@extend .cf
			li {
				float: left;
				display: inline-block;
			}
		}
	}

}
@media (max-width:1044px){
	.main-header {
		text-align: center;
	}
}