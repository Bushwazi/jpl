block content   
    style.
        * {
        	padding: 0;
        	margin: 0;
        }
        input[type="range"]{
        	width: 90%;
        	margin: 0 5%;
        }
        label,
        output {
        	display: block;
        	text-align: center;
        }
        article {
        	width:90%;
        	padding:100px 5%;
        	overflow-x:auto; 
        }
        label {
        	overflow: hidden;
        	width:1600%;
        }
        label span {
        	display: inline-block;
        	width: calc((100/16) * 1%);
        	float: left;
        	text-align: center;
        }
    label(for="date")
        span 2000
        span 2001
