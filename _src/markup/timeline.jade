        span 2015
    input(type="range" id="date" min="0" max="180" value="174" step="1")
    output(for="fader" id="selected-date")
    script.
        var timeline = {};
        timeline["el"] = document.getElementsByTagName("article")[0];
        timeline["width"] = timeline.el.scrollWidth;
        timeline.horiPos = timeline.el.scrollLeft;
        console.log(timeline.el.scrollWidth, timeline.el.scrollLeft);
        document.getElementById("date").addEventListener('change', function(evt){
        outputUpdate();
        });
        function outputUpdate() {
        var selectedDate = document.getElementById("date").value;
        myYear = getYear(Math.floor(selectedDate / 12)),
        myMonth = getMonth(selectedDate % 12);
        document.querySelector('#selected-date').value = myMonth + "/" + myYear;
        timeline.el.scrollLeft = parseInt(selectedDate) / 180 * timeline.el.scrollWidth;
        console.log( parseInt(selectedDate) / 180 * timeline.el.scrollWidth, selectedDate, timeline.el.scrollWidth, timeline.el.scrollLeft);
        }
        function getYear(num){
        if(num < 10){
        return "200" + num;
        } else {
        return "20" + num;
        }
        }
        function getMonth(num){
        var months = ["Jan", "Feb", "March", "April", "May", "June", "July", "Aug", "Sept", "Oct", "Nov", "Dec"]
        return months[num];
        }
        outputUpdate();

