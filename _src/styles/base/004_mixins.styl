/*==========
	SIZE FUNCTIONS
 ==========*/
makeEms(goal, base = 14){
  (goal / base) * 1em;
}
makeRems(goal, base = 14){
  (goal / base) * 1rem;
}



fancyButtons(){
	background rgba(255,255,255,0.5)
	padding 0.5em 0.5em 0.25em
	line-height:1em;
	text-align center
	background-color black
	color white
	background-image: linear-gradient(to right, white 33%, rgba(255,255,255,0) 0%), linear-gradient(white 33%, rgba(255,255,255,0) 0%), linear-gradient(to right, white 33%, rgba(255,255,255,0) 0%), linear-gradient(white 33%, rgba(255,255,255,0) 0%);
	background-position: top, right, bottom, left;
	background-size: 3px 1px, 1px 3px, 3px 1px, 1px 3px;
	background-repeat: repeat-x, repeat-y, repeat-x, repeat-y;
	transition:all 0.5s ease-in-out 0.0s;
	&:hover {
		text-decoration none
		color green
		background-size: 9px 1px, 1px 9px, 9px 1px, 1px 9px;
	}
}