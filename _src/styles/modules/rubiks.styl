.rubiks {
	margin 0
	padding 0
	list-style none	
	width: 200px;
  height: 200px;
  position: relative;
  perspective: 1000px;
	ul {
		margin 0
		padding 0
		list-style none
		width: 100%;
		height: 100%;
		position: absolute;
		transform-style: preserve-3d;
	}
	[data-block] {
		margin: 0;
		width: 196px;
		height: 196px;
		display: block;
		position: absolute;
		border: 2px solid black;


		border-radius 5px
		// height 330px
		// width 330px
		background black
		padding 5px
		// position absolute
		// top 50%
		// left 50%		
		ul {
			display flex
			flex-wrap wrap
			margin 0
			padding 0
			list-style none
		}
	}
	[data-block='1'] {
		transform: rotateY(0deg) translateZ(100px);
		li {			
			background red
		}
	}
	[data-block='2'] {
		transform: rotateX(180deg) translateZ(100px);
		li {			
			background yellow
		}
	}
	[data-block='3'] {
		transform: rotateY(90deg) translateZ(100px);
		li {			
			background green
		}
	}
	[data-block='4'] {
		transform: rotateY(-90deg) translateZ(100px);
		li {			
			background white
		}
	}
	[data-block='5'] {
		transform: rotateX(90deg) translateZ(100px);
		li {			
			background blue
		}
	}
	[data-block='6'] {
		transform: rotateX(-90deg) translateZ(100px);
		li {			
			background orange
		}
	}
	li li {
		height 30%
		width 30%
		text-align center
		font-size 2em
		line-height 100px
		border-radius 5px
		margin 5px
	}
}