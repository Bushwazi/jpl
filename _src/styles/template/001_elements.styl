// Base style guide. Core elements only
html {
	font-size 10px;
}
body {
	background: _bgcolor;
	font-family: 'Orbitron', sans-serif;
	font-weight 400
	font-size 1em
	line-height makeEms(28);
	padding-bottom 100px
	letter-spacing 0.05em
}
h1 {
	font-size makeRems(28)
	line-height 2em
	font-weight 400
	margin-bottom 0.5em
}
h2 {
	font-size makeRems(26)
	line-height 2em
	font-weight 400
	margin-bottom 1em
}
h3 {
	font-size makeRems(23)
	line-height 2em
	font-weight 400
}
h4 {
	font-size makeRems(20)
	line-height 2em
	font-weight 400
}
h5 {
	font-size makeRems(17)
	line-height 2em
	font-weight 400
}
h6 {
	font-size makeRems(14)
	line-height 2em
	font-weight 400
}
blockquote,
p {
	margin-bottom 1em
}
small {
	display inline-block
	font-size makeRems(10)
	line-height makeEms(18,10)
}
a {
	text-decoration none
	&:hover {
		text-decoration underline
	}
}
table {
	border-collapse: collapse;
	font-size: (10 / 14) * 1em;
	background white
	thead th {
		background: black;
		color: white;    
		border-color:white;
		border-width:1px;
		border-style:solid;
	}
}
th,
td {
  border: solid 1px #000;
  width: 25%;
  box-sizing: border-box;
  padding: 1em;
}
th {
  text-align: left;
}
th:hover {
  background: red;
}
th[colspan] {
  font-size: 1.5em;
  background: #333;
  color: #fff;
}
th img,
td img {
  max-width: 90%;
  max-height: 150px;
}
tr > td:first-child {
  text-align: center;
  vertical-align: middle;
}
ul {
	list-style: disc outside;
	padding-left 2em
	margin-bottom 1em
}
button {
	border none
	background none
	height inherit
	line-height inherit
	cursor pointer
	font inherit
	&:active,
	&:focus {
		outline none
	}
}
input,
textarea {
	width 100%
	box-sizing border-box	
	font inherit
	border dashed 1px black
	padding 0.25em 0.5em
}
@media (min-width:480px){
	html {
		font-size 14px;
	}
}