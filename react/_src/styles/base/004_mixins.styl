/*==========
	SIZE FUNCTIONS
 ==========*/
makeEms(goal, base = 14){
  (goal / base) * 1em;
}
makeRems(goal, base = 14){
  (goal / base) * 1rem;
}

defaultFont(){
	font-weight: 400;
}
italicFont(){
	font-weight: 400;
	font-style italic
}
boldFont(){
	font-weight: 700;
}
headlineFont(){
	font-family: 'Great Vibes', cursive;
	font-weight: normal;
}

fancyButtons(){
	background rgba(255,255,255,0.5)
	padding 0.5em
	border dashed 1px black
	box-shadow 5px 5px 0px 0px rgba(0,0,0,0.75)
	text-align center
	&:hover {
		text-decoration none
		box-shadow 15px 15px 0px 0px rgba(0,0,0,0.75)
	}
}