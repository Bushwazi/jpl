header {
	position: fixed;
	top: 0;
	left: 0;
	width: 100%; 
	height 30px
	background #FFF
	border-bottom dashed 1px black
	z-index 99
	label {
		height: 30px;
		width: 30px;
		background: none;
		display block
		float left
		text-align center
		font-size makeRems(24)
		line-height makeEms(23,25)
		border-right dashed 1px black 
		&:before {
			content "â˜°"
			height 100%
			line-height 30px
		}
	}
	input {
		display: none;
		&:checked ~ nav {
			transform:translateX(0%);
		}
		&:checked ~ label:before {
			content "X"
			font-size 0.6em
		}
	}
	nav {
		position absolute
		top 100%
		left 0
		transform:translateX(-100%);
		transition: all 0.5s ease-in-out 0.0s;
		background #FFF 
		border dashed 1px black 
	}
	ul {
		list-style none
		padding 10px
	}
	li {
		border-bottom dashed 1px black 
		padding 0.25em
		&:last-child {
			border none
		}
	}
	> a {
		padding 0 1em
		display block
		height 100%
		line-height 30px
	}
	[data-cta="home"] {
		float left
	}
}
@media (min-width:480px){
	header [data-cta="home"]:after {
		content ": WebDev"
	}
}
@media (min-width:600px){
	header [data-cta="home"]:after {
		content ": Web Developer"
	}
}
@media (min-width:750px){
	header [data-cta="home"]:after {
		content ": Full Stack Web Developer"
	}
}
@media (min-width:1000px){
	header [data-cta="home"]:after {
		content ": Your Mother's Favorite Web Developer"
	}
}
@media (min-width:1200px){
	header [data-cta="home"]:after {
		content ": Hide Your Kids, Hide Your Web Developer"
	}
}